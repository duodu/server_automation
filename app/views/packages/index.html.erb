<h1>Listing packages</h1>

<table>
  <tr>
    <th>Ip</th>
    <th>Username</th>
    <th>Sort</th>
    <th>Package array</th>
    <th>Path</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @packages.each do |package| %>
  <tr>
    <td><%= package.ip %></td>
    <td><%= package.username %></td>
    <td><%= package.sort %></td>
    <td><%= package.package_array %></td>
    <% if package.path != nil%>
    <td><%= package.path.name %></td>
    <% else %>
    <td></td>
    <% end %>
    <td><%= link_to 'Show', package %></td>
    <td><%= link_to 'Edit', edit_package_path(package) %></td>
    <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

